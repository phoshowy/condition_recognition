/* styles.css */
.container {
  display: flex;
  flex-direction: column;
  padding: 1rem;
}

.image-area {
  margin-bottom: 1rem;
  border: 1px solid #ccc;
  padding: 1rem;
  height: 200px; /* 固定高度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.text-area {
  border: 1px solid #ccc;
  padding: 1rem;
  height: 300px; /* 固定高度 */
  overflow-y: auto; /* 支持滚动条 */
}

.selected-content {
  background-color: aqua;
  padding: 0.5rem;
}